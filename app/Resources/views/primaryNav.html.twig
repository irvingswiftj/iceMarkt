{% block primaryNav %}
    {% set CurrentRoute = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand {% if CurrentRoute == path('home_page') %}active{% endif %}"
                   href="{{ path('home_page') }}"
                        >IceMarkt
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Recipients<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li {% if CurrentRoute == path('add_recipient') %}class="active"{% endif %}>
                                <a href="{{ path('add_recipient') }}">Add Recipient</a>
                            </li>
                            <li {% if CurrentRoute == path('view_recipient_list') %}class="active"{% endif %}>
                                <a href="{{ path('view_recipient_list') }}">View Recipients</a>
                            </li>
                            <li {% if CurrentRoute == path('bulk_add_recipient') %}class="active"{% endif %}>
                                <a href="{{ path('bulk_add_recipient') }}">Bulk Add Recipient</a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Email Templates<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li {% if CurrentRoute == path('add_email_template') %}class="active"{% endif %}>
                                <a href="{{ path('add_email_template') }}">Add Email Template</a>
                            </li>
                            <li {% if CurrentRoute == path('view_email_template_list') %}class="active"{% endif %}>
                                <a href="{{ path('view_email_template_list') }}">View Email Templates</a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Email Profiles<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li {% if CurrentRoute == path('add_email_profile') %}class="active"{% endif %}>
                                <a href="{{ path('add_email_profile') }}">Add Email Profile</a>
                            </li>
                            <li {% if CurrentRoute == path('view_email_profile_list') %}class="active"{% endif %}>
                                <a href="{{ path('view_email_profile_list') }}">View Email Profiles</a>
                            </li>
                        </ul>
                    </li>
                    </li>
                    <li {% if CurrentRoute == path('marketing') %}class="active"{% endif %}>
                        <a href="{{ path('marketing') }}">Marketing</a>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
{% endblock %}