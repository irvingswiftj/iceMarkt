{% extends '::base.html.twig' %}

{% block title %}Edit Email Template{% endblock %}

{% block body %}
    <script src="//cdn.ckeditor.com/4.4.3/standard/ckeditor.js"></script>

    <h1>Edit Email Template</h1>

    {% if emailTemplateEdited %}
        <div class="alert alert-success">
            <p>Saved Template: {{ emailTemplateEdited }}</p>
        </div>
    {% endif %}

    {% if errorMsg is defined %}
        <div class="alert alert-danger">
            <p>{{ errorMsg }}</p>
        </div>
    {% endif %}

    {{ form_start(addTemplateForm) }}

    {{ form_errors(addTemplateForm) }}

    <div class="form-group">
        {{ form_row(addTemplateForm.name) }}
    </div>
    <div class="form-group">
        {{ form_row(addTemplateForm.email_profile_id) }}
    </div>
    <div class="form-group">
        {{ form_row(addTemplateForm.subject) }}
    </div>
    <div class="form-group">
        {{ form_row(addTemplateForm.template) }}
    </div>
    <script>
        CKEDITOR.replace('form_template', {
            "height": 600
        });
    </script>
    <div class="form-group">
        {{ form_row(addTemplateForm.format) }}
    </div>

    {{ form_end(addTemplateForm) }}
{% endblock %}