{% extends '::base.html.twig' %}

{% block title %}Mail Recipients{% endblock %}

{% block body %}
    <h1>View Recipients</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-condensed">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Subject</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for emailTemplate in emailTemplates %}
                <tr>
                    <td>{{ emailTemplate.name}}</td>
                    <td>{{ emailTemplate.subject }}</td>
                    <td><a href="{{ path('view_email_template_preview',{'id': emailTemplate.id}) }}" target="_blank">Preview</a></td>
                </tr>
                {%  endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}